    // ========== CR√âATION DE LA CARTE ==========
    createMap() {
        // D√©truire la carte existante si elle existe
        if (this.map) {
            this.map.remove();
            this.map = null;
            this.markers = [];
        }

        this.map = L.map('carte-oliviers', {
            center: this.config.center,
            zoom: this.config.zoom,
            minZoom: this.config.minZoom,
            maxZoom: this.config.maxZoom,
            zoomControl: true,
            scrollWheelZoom: true
        });

        // Tuiles OpenStreetMap
        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '¬© OpenStreetMap | Oliviers Centenaires - Alejandra Galv√°n',
            maxZoom: 18
        }).addTo(this.map);

        console.log('üó∫Ô∏è Carte de base cr√©√©e');
    },

    // ========== AJOUT DES MARQUEURS ==========
    addMarkers() {
        this.markers = []; // Reset des marqueurs
        
        this.oliviers.forEach((olivier, index) => {
            const style = this.markerStyles[olivier.etat];
            
            // Marqueur CircleMarker pour un rendu uniforme
            const marker = L.circleMarker([olivier.lat, olivier.lng], {
                radius: 12,
                fillColor: style.fillColor,
                color: '#ffffff',
                weight: 3,
                opacity: 1,
                fillOpacity: 0.9
            });

            // Popup avec contenu dynamique
            const popupContent = this.createPopupContent(olivier);
            marker.bindPopup(popupContent, {
                maxWidth: 320,
                minWidth: 280,
                className: 'olivier-popup',
                closeOnClick: false,
                autoClose: false
            });

            // √âv√©nements du marqueur
            marker.on('click', () => {
                this.animateMarker(marker);
            });

            marker.on('mouseover', () => {
                marker.setStyle({ radius: 14 });
            });

            marker.on('mouseout', () => {
                marker.setStyle({ radius: 12 });
            });

            // Ajouter √† la carte
            marker.addTo(this.map);
            this.markers.push(marker);
        });

        // Ajuster la vue pour tous les marqueurs
        if (this.markers.length > 0) {
            const group = new L.featureGroup(this.markers);
            this.map.fitBounds(group.getBounds().pad(0.1));
        }

        console.log(`üìç ${this.markers.length} marqueurs ajout√©s`);
    },

    // ========== ANIMATION MARQUEUR ==========
